<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".view.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_birds"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/dove"
        android:text="@string/birds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_animals">
    </TextView>

    <TextView
        android:id="@+id/tv_animals"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bear"
        android:gravity="center"
        android:text="@string/animals"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_birds"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>